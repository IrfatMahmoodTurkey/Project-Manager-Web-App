@model ProjectManagementWebApp.Models.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Home")"><i class="fas fa-home"></i> Home</a>
    </li>
    <li class="breadcrumb-item active"><i class="fas fa-unlock-alt"></i> Change Password</li>
</ol>


<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-7">
        <form asp-action="ChangePassword" class="form-horizontal">
            <h4><i class="fas fa-unlock-alt" style="color: #1B5E20"></i> Change Password</h4><hr />
            
            @Html.Raw(ViewData["Message"])

            <div class="form-group">
                <label asp-for="MainPassword">Old Password</label>
                <br />
                <input asp-for="MainPassword" class="form-control" placeholder="Enter Your Old Password" />
                
                <span asp-validation-for="MainPassword" style="color: red"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword">New Password</label>
                <br />
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter Your New Password" />
                
                <span asp-validation-for="NewPassword" style="color: red"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReNewPassword">New Password Again</label>
                <br />
                <input asp-for="ReNewPassword" type="password" class="form-control" placeholder="Re Enter Your New Password" />
                
                <span asp-validation-for="ReNewPassword" style="color: red"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-default" style="width: 100%"/>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
